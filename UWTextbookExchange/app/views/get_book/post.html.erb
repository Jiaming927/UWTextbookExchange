<!DOCTYPE html>
<html lang="en">
<head>
<link href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/simplex/bootstrap.min.css" rel="stylesheet">
<%= stylesheet_link_tag('index', :media => 'all') %>

<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

<script type="text/javascript">
<% if user_signed_in? %>
var flashing = null
$( document ).ready(function(){	
	setInterval(updateCount,10000);
	if (<%= @msgc ? @msgc.unread : 0 %> > 0){
		$("#chatmsg").css("background-color", "#FFFFFF");
		flashing = setInterval(function(){ $("#chatmsg").fadeOut(300).fadeIn(300); },600);
	}
});

function updateCount(){
    $.ajax({
    url:  "/showcount",
    type: "GET",
  }).done(function(data){
    $("#msgct").html(data);
    if (data.trim() != "0"){
	clearInterval(flashing);
	$("#chatmsg").css("background-color", "#FFFFFF");
	flashing = setInterval(function(){ $("#chatmsg").fadeOut(300).fadeIn(300); },600);
    } else {
	clearInterval(flashing);
    }
  });
}
<% end %>
</script>
</head>

<body>
<%= render template: "layouts/bar" %>

<div style="width:90%;margin:auto">
<br />

<%= link_to("Home", root_url) %>
<a href="javascript:history.back(-1)">Back </a>
<% if !flash[:postmessage].blank? %>
<div class = "notice">
        <%= flash[:postmessage] %>
</div>
<% end %>

<h1>Search Result for <%= @courseInfo.course_name %></h1>
<ol>
<% @courseInfo.attributes.each do |attr_name, attr_value| %>
  <% if attr_name != "id" && attr_name != "course_name" && attr_name != "number" && attr_name != "created_at" && attr_name != "updated_at" && attr_value != nil %>
<li><a href="<%=root_url%>show?book=<%=attr_value%>"><%=attr_value%></a>
  <a href="<%=root_url%>postto?course=<%=@courseInfo.course_name%>&book=<%=attr_value%>&course=<%= @courseInfo.course_name %>">Post</a></li>
  <% end %>
<% end %>
</ol>
</div>
</body>